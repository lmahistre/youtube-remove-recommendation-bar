{
	"manifest_version": 2,
	"name": "Youtube Remove Recommendation Bar",
	"description": "Addon to remove the new recommendation bar on Youtube",
	"version": "1.0.2",
	"author": "Lionel Mahistre",
	"content_scripts": [
		{
			"matches": ["*://www.youtube.com/"],
			"js": ["yrrb.js"]
		}
	],
	"icons": {
		"32": "img/logo-32.png",
		"48": "img/logo-48.png",
		"64": "img/logo-64.png",
		"96": "img/logo-96.png",
		"128": "img/logo-128.png",
		"512": "img/logo-512.png"
	}
}
